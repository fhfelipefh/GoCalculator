{
    "builders":[
        {
            "type": "docker",
            "image": "golang:1.18",
            "commit": true,
            "changes": [
                "EXPOSE 8081",
                "ENTRYPOINT  [\"/bin/bash\", \"-c\", \"cd $HOME/files && go run calculator &\"] "
                ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files", 
            "destination": "/tmp"    
        },
        {
            "type": "shell",
            "inline":[
                "cp -r /tmp/files $HOME/files",
                "cd $HOME/files",
                "go mod init calculator",
                "go get -d -v .", 
                "go build"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "fhfelipefh/calculator",
            "tags": "latest"
          }
    ]
}